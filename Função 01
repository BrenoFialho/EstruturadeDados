def somatorio():                        # Defifindo a função somatório, sem argumentos;

    total = 0                           # Definindo a variável 'total' e atribuindo valor igual a zero;
    
    for n in range(1, 101):             # Criando um loop que varia a variável 'n' de 1 até 100.
         
        termo = 1/n                     # Atribuindo o valor 1/n na variável 'termo'.

        novo_total = total + termo      # Criando um somatório entre 'termo' e 'total' e armazenando o resultado na variável 'novo_total'.

        
        total = novo_total              # Atualizando o valor da variável 'total' com 'novo_total' para a próxima iteração do loop.
    
    
    return total                        # Depois que o loop termina, retornamos o valor acumulado em 'total'.


resultado = somatorio()                 # Chamamos a função 'somatorio' e armazenamos o resultado na variável 'resultado'.


print(resultado)                        # Imprimindo o valor de 'resultado' na tela.
